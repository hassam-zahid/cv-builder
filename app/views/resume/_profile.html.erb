<div style="margin: 3% 0%;">
	<div class="row">
    <div class="col-sm-1"></div>
		<div class="col-sm-3">
        <div>
            <% if @user.user_image.exists? %>
                <img src="<%= @user.user_image.url%>" class="rounded float-left" style="height:170px;max-width: 180px;" >
            <% else %>
                <img src="<%= image_url('user_missing_image.png')%>" class="rounded float-left" style="height:170px;max-width: 180px;" >
            <% end %>
        </div>
        <div style="margin-top: 190px;">
            <small id="emailHelp" class="form-text text-muted"><%= t("profile.image_will_show_on_resume")%></small>
        </div>
  		</div>
  		<div class="col-sm-4">
  			<label class="title_color"><%= t("profile.full_name")%></label>
  			<p class="paragraph_size"><%= @user.name.to_s%></p>
  			<label class="title_color"><%= t("profile.phone_number")%></label>
  			<p class="paragraph_size"><%= @user.phone%></p>
        <% if !@user.skype.nil? && @user.skype.length > 5 %> 
  			<label class="title_color"><%= t("profile.skype")%></label>
  			<p class="paragraph_size"><%= @user.skype%></p>
        <% end %>
        <% if !@user.linked_in.nil? && @user.linked_in.length > 5 %>
  			<label class="title_color"><%= t("profile.linked_in")%></label>
  			<p class="paragraph_size"><%= @user.linked_in%></p>
        <% end %>
        <% if !@user.dob.nil?%>
  			<label class="title_color"><%= t("profile.dob")%></label>
  			<p class="paragraph_size"><%= @user.dob.strftime('%a, %d %b %Y')%></p>
        <% end %>
  			<label class="title_color"><%= t("profile.address")%></label>
  			<p class="paragraph_size"><%= @user.address%></p>
        <br>
        <%= link_to t("profile.update_profile"), profile_path, :class=>"btn btn-outline-primary" %> 
  		</div>
  		<div class="col-sm-4">
      Hassam Malik      </div>
	</div>
</div>
<hr>
<br><br><br>