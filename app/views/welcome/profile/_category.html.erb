<label><%= t("profile.update_category")%></label> <br>

<button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#update_category">
  <%= t("profile.update_category")%>
</button>


<div class="modal fade" id="update_category" tabindex="-1" role="dialog" aria-labelledby="update_categoryTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="update_categoryTitle"><%= t("profile.update_category")%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag('/update_category', remote: true, id: "cat_form_112") do -%>
            <div class="form-group">
                <label ><%= t("profile.category_list")%></label>
                <input type="text" name="name" class="form-control" maxlength="60" value="<%= current_user.category.name%>" list="browsers" required>
                <small id="emailHelp" class="form-text text-muted"><%= t("profile.category_instructions")%></small>
            </div>
            <input type="submit" name="commit" value="<%= t("profile.update_category")%>" class="btn btn-outline-primary" data-disable-with="Save">
        <% end -%>

        <datalist id="browsers">
            <% @categories.each do |cat|%>
                <option value="<%= cat[:name]%>">
            <% end %>
        </datalist>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="cat_md_cl" data-dismiss="modal"><%= t("generic.close")%></button>
      </div>
    </div>
  </div>
</div>














<script>
  $("#cat_form_112").submit(function(){
    $("#cat_md_cl").click();
});
</script>



















