<a href="" data-toggle="modal" data-target="#create_template_modal_121">
    <button type="button" class="btn btn-outline-primary btn-sm">New Template</button>
</a>
<br><br>
<% @templates.each do |t|%>
<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="<%= t.image.url%>" alt="Card image cap" style="height: 200px;">
  <div class="card-block">
    <h4 class="card-title"><%= t.name %></h4>
    <p class="card-text"><%= t.description %></p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
<% end %>


<div class="modal fade" id="create_template_modal_121" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create New Template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%= form_tag('/admin/add_template', multipart: true) do -%>

  <div class="form-group">
  						<label for="" class="form-control-label">Image<span style="color: red;">*</span></label>
                        <%= file_field_tag 'image', :class=> "form-control", :maxlength=>"60", :required => true %>
                        <label for="" class="form-control-label">Temaplate Name<span style="color: red;">*</span></label>
                        <%= text_field_tag 'name', "", :class=> "form-control", :maxlength=>"60", :required => true %>
                        <label for="" class="form-control-label">Description<span style="color: red;">*</span></label>
                        <%= text_area_tag 'description', "", :class=> "form-control", :maxlength=>"600", :required => true, :rows => "5" %>
  
 </div>
 <div><%= submit_tag 'Create', :class=>"btn btn-outline-primary" %></div>
<% end -%>


            </div>
           
               
              <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="cat_md_cl" data-dismiss="modal"><%= t("generic.close")%></button>
      </div>
        </div>
    </div>
</div>


